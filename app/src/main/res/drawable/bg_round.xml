<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background layer -->
    <item><shape android:shape="rectangle">
            <solid android:color="@color/round_bg_color" />

            <corners android:radius="50dp" /> <!-- Adjust radius to make it a perfect circle -->
        </shape></item>
    <!-- Optional: Add border layer -->
    <item><shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/round_bg_border_color" />

            <corners android:radius="50dp" />
        </shape></item>

</layer-list>